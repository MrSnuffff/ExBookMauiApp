<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExBookMauiApp.Pages.BookDetailPage"
             BackgroundColor="White">
    <ScrollView >
        <StackLayout Padding="10" x:Name="BookInfo">

            <Label Text="{Binding Book.title}" FontSize="14" TextColor="Black" HorizontalOptions="Center" />
            <Label Text="Description:" FontSize="18" TextColor="Gray" />
            <Label Text="{Binding description}" FontSize="16" TextColor="Black" />
        </StackLayout>
    </ScrollView>
</ContentPage>